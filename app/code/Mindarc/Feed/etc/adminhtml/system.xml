<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="mindarc" translate="label" sortOrder="10">
            <label>Mindarc</label>
        </tab>
        <section id="feed_section" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Feeds Generator</label>
            <tab>mindarc</tab>
            <resource>Mindarc_Feed::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Feed Configuration</label>
                <field id="feed_folder" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Feed Folder</label>
                    <comment>Feed folder in /pub/media</comment>
                </field>
            </group>
            <group id="currency" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Currency Service</label>
                <field id="service_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Service Key</label>
                    <comment>Go to https://currencylayer.com to get an API key</comment>
                </field>
            </group>
        </section>
    </system>
</config>
