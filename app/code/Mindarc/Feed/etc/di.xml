<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Mindarc\Feed\Config\Reader" type="Magento\Framework\Config\Reader\Filesystem">
        <arguments>
            <argument name="converter" xsi:type="object">Mindarc\Feed\Config\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Mindarc\Feed\Config\SchemaLocator</argument>
            <argument name="fileName" xsi:type="string">feed.xml</argument>
            <argument name="idAttributes" xsi:type="array">
                <item name="/config/feed" xsi:type="string">id</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Mindarc\Feed\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mindarc\Feed\Config\Reader</argument>
        </arguments>
    </type>
</config>
