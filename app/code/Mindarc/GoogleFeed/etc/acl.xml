<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Mindarc_Core::main_menu" title="Mindarc" sortOrder="10">
                    <resource id="Mindarc_GoogleFeed::google" title="Google Feeds" sortOrder="10">
                        <resource id="Mindarc_GoogleFeed::profiles" title="Google Feed Profiles" sortOrder="20">
                            <resource id="Mindarc_GoogleFeed::form" title="Profile Edit Form" sortOrder="10" />
                            <resource id="Mindarc_GoogleFeed::save" title="Save Profiles" sortOrder="10" />
                            <resource id="Mindarc_GoogleFeed::delete" title="Delete Profiles" sortOrder="20" />
                            <resource id="Mindarc_GoogleFeed::generate" title="Generate Feeds" sortOrder="30" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mindarc_GoogleFeed::configuration" title="Google Feed Configurations" sortOrder="10" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>